# Secure MCP Gateway Configuration

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=sqlite:///secure_mcp_gateway.db
# DATABASE_URL=postgresql://mcp_user:mcp_password@localhost:5432/mcp_gateway

# Authentication Settings
AUTH_ENABLED=true
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=mcp-gateway
JWKS_URL=http://localhost:8080/realms/mcp-gateway/protocol/openid-connect/certs
JWT_ALGORITHM=RS256
JWT_AUDIENCE=mcp-gateway-client
TOKEN_CACHE_TTL=300

# Policy Settings
POLICY_FILE=policies/policy.yaml
CASBIN_MODEL=server/policies/rbac_model.conf
CASBIN_POLICY=server/policies/rbac_policy.csv

# MCP Settings
MCP_SERVERS_CONFIG=mcp_servers.yaml

# Audit Settings
AUDIT_LOG_FILE=audit.json
AUDIT_TO_STDOUT=true

# Proxy Settings
PROXY_TIMEOUT=60
