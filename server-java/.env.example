# MCP Gateway - Java/Spring Boot Environment Variables

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_PORT=8000
SERVER_ADDRESS=0.0.0.0

# ============================================================================
# Database Configuration
# ============================================================================
# For development (H2 in-memory)
SPRING_DATASOURCE_URL=jdbc:h2:mem:mcp_gateway
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=

# For production (PostgreSQL)
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/mcp_gateway
# SPRING_DATASOURCE_USERNAME=mcp_user
# SPRING_DATASOURCE_PASSWORD=mcp_password
# SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# ============================================================================
# JPA/Hibernate Configuration
# ============================================================================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# ============================================================================
# Flyway Configuration
# ============================================================================
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# ============================================================================
# Authentication Configuration
# ============================================================================
# Enable/disable authentication
AUTH_ENABLED=false

# Keycloak settings
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=mcp-gateway
JWT_ALGORITHM=RS256
JWT_AUDIENCE=mcp-gateway-client

# Spring Security OAuth2 Resource Server
# SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://localhost:8080/realms/mcp-gateway
# SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=http://localhost:8080/realms/mcp-gateway/protocol/openid-connect/certs

# ============================================================================
# MCP Configuration
# ============================================================================
MCP_SERVERS_CONFIG=mcp_servers.yaml
PROXY_TIMEOUT=60

# MCP OAuth (for VS Code, Claude Desktop)
MCP_AUTH_ENABLED=false
MCP_OAUTH_CLIENT_ID=tes-mcp-client
MCP_OAUTH_CLIENT_SECRET=
MCP_RESOURCE_SERVER_URL=http://localhost:8000/mcp
MCP_REQUIRED_SCOPES=openid,profile

# ============================================================================
# Audit Logging
# ============================================================================
AUDIT_LOG_FILE=audit.json
AUDIT_TO_STDOUT=true
AUDIT_TO_DATABASE=true

# ============================================================================
# External Service Credentials
# ============================================================================
# GitHub
GITHUB_MCP_PAT=

# Notion
NOTION_TOKEN=
NOTION_MCP_BEARER_TOKEN=

# Figma
FIGMA_API_TOKEN=

# Salesforce
SALESFORCE_API_KEY=

# Custom services
INTERNAL_API_TOKEN=
CUSTOM_TOKEN=

# ============================================================================
# Logging Configuration
# ============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_DATACLINE_MCPGATEWAY=DEBUG

# ============================================================================
# Caching Configuration
# ============================================================================
SPRING_CACHE_TYPE=caffeine

# ============================================================================
# Actuator Configuration
# ============================================================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# ============================================================================
# Development Settings
# ============================================================================
# Active profile (dev, test, docker, prod)
# SPRING_PROFILES_ACTIVE=dev

# ============================================================================
# Production Settings
# ============================================================================
# For production deployment, uncomment and configure:
# SPRING_PROFILES_ACTIVE=prod
# LOGGING_LEVEL_ROOT=WARN
# AUTH_ENABLED=true
# SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/mcp_gateway
# SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
