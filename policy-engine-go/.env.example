# Policy Engine Configuration

# Server port
PORT=9000

# Policy directory (where YAML policy files are stored)
POLICY_DIR=/app/policies

# Debug mode (true/false)
DEBUG=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Java Gateway URL (for MCP server discovery)
JAVA_GATEWAY_URL=http://localhost:8000

# Postman API Key (required for MCP Catalog search)
# Get your API key from https://www.postman.com/settings/me/api-keys
POSTMAN_API_KEY=
