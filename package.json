  "scripts": {
    "start": "cd server-java && docker-compose up -d",
    "stop": "cd server-java && docker-compose down",
    "restart": "cd server-java && docker-compose restart",
    "logs": "cd server-java && docker-compose logs -f",
    "clean": "cd server-java && docker-compose down -v",
    "build": "cd server-java && docker-compose build",
    "test": "echo 'Run service-specific tests'",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:gateway": "cd server-java && ./mvnw spring-boot:run",
    "dev:policy": "cd policy-engine-go && go run main.go"
  },
  "workspaces": [
    "frontend"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  }
